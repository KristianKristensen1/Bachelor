@model FrontEndBA.Models.ParticipantModel.AccountViewModels.ParticipantLoginModel

@{
    ViewData["Title"] = "WelcomePage";
} 

<head>
    <meta http-equiv="cache-control" content="private, max-age=0, no-cache">
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="expires" content="0">
</head>
<h2>Welcome Participant</h2>
<text></text>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WelcomePage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="padding-bottom: 10px">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 10px">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-default" formaction="LoginParticipant" />
            </div>

        </form>
    </div>
    <div style="text-align: right" class="col-md-4">
        <img src="~/images/PatientIcon.png" alt="Error Logo" style="width: 50%; height: 50%">
    </div>
</div>
<div>
    <a asp-area="" asp-controller="Register" asp-action="Participant">Register</a>
   
</div>
<div>
    <a asp-area="" asp-controller="RetrieveAccount" asp-action="Participant">Forgot your account?</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
