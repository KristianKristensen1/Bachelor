@model FrontEndBA.Models.ProfileModel.ParticipantProfileModel

@{
    ViewData["Title"] = "Participant";
}

<h2>Participant</h2>

<h4>ParticipantProfileModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEmailParticipant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label>Email</label>
                </div>

                <label asp-for="Email">
                    <input class="form-control" placeholder="@Html.ViewData.Model.Email.ToString()" asp-for="Email" value="">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </label>
            </div>
           
            <div class="form-group">
                <label asp-for="Id" class="control-label">Your ID is: @Model.Id.ToString()</label>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-default" type="submit"> Save</button>
                <button type="button" class="btn btn-default" OnClick="ShowLabel()">Change Password</button>
                <button type="button" value="Back" class="btn btn-default">Back</button>
                
            </div>

        </form>
    </div>
    <div id="inpass"style="display: none;" class="col-md-4">
        <form asp-action="Participant">
            <div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
        </form>
        <button type="submit" value="SavePasswordParticipant" class="btn btn-default">Save Password</button>
    </div>
</div>


