@model FrontEndBA.Models.ProfileModel.ResearcherProfileModel

@{
    ViewData["Title"] = "Participant";
}

<h2>Participant</h2>

<h4>ParticipantProfileModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEmailResearcher">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label>Email</label>
                </div>

                <label asp-for="Email">
                    <input class="form-control" placeholder="@Html.ViewData.Model.Email.ToString()" asp-for="Email" value="@Html.ViewData.Model.Email.ToString()">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <div>
                    <label>Firstname</label>
                </div>
                <input asp-for="Firstname" class="form-control" placeholder="@Html.ViewData.Model.Firstname.ToString()" value="@Html.ViewData.Model.Firstname.ToString()"/>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label>Lastname</label>
                </div>
                <input asp-for="Lastname" class="form-control" placeholder="@Html.ViewData.Model.Lastname.ToString()" value="@Html.ViewData.Model.Lastname.ToString()"/>
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id" class="control-label">Your ID is: @Model.Id.ToString()</label>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Verify" class="control-label">
                    @if (Model.Verify == true)
                    {
                        @Html.Raw("You are Verified")
                    }
                    else
                    {
                        @Html.Raw("You are not Verified")
                    }
                </label>
                <span asp-validation-for="Verify" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin" class="control-label">
                    @if (Model.Admin == true)
                    {
                        @Html.Raw("You are Admin")
                    }
                    else
                    {
                        @Html.Raw("You are not Admin")
                    }
                </label>
                <span asp-validation-for="Admin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default"> Save</button>
                <button type="button" class="btn btn-default" OnClick="ShowLabel()">Change Password</button>
                <button type="button" class="btn btn-default" onclick="location.href = '@(Url.Action("Participant", "Homepage"))'">Back</button>

            </div>

        </form>
    </div>
@if (Model.ValidInput == true)
{
    <div id="inpass" style="display: none;" class="col-md-4">
        <form asp-action="SavePasswordResearcher">
            <div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
            <button type="submit" class="btn btn-default"> Save password</button>
        </form>
     
    </div>
}
else
{
    <div id="inpass" class="col-md-4">
        <form asp-action="SavePasswordResearcher">
            <div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
            <button type="submit" class="btn btn-default"> Save password</button>
        </form>
     
    </div>
}
   
    <div style="text-align: right" class="col-md-4">
        <img src="~/images/ResearcherIcon.PNG" alt="Error Logo" style="width: 50%; height: 50%">
    </div>
</div>

@if (Model.SuccesChangePassword)
{
    <script>alert("You have successfully changed your password");</script>
}


