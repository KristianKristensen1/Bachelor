@using BachelorBackEnd
@model FrontEndBA.Models.CreateStudy.CreateStudy

@{
    ViewData["Title"] = "Index";
}


<h4>Study</h4>
<hr />
<div class="container" style="width:80%;">
    <div class="row">
        <div class="col-md-5" id="right" style="background-color: white; width: 100%;">
            <h3 class="tableTitle">Create a Study</h3>
            <table class="table">
                <thead>
                <tr>
                    <th class="col-md-2">
                        Study Name
                    </th>
                    <th>
                        <div class="form-group">
                            <input asp-for="currentStudy.Name" class="form-control" />
                            <span asp-validation-for="currentStudy.Name" class="text-danger"></span>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th class="col-md-2">
                        Abstract
                    </th>
                    <th>
                        <div class="form-group">
                            <input asp-for="currentStudy.Abstract" class="form-control" />
                            <span asp-validation-for="currentStudy.Abstract" class="text-danger"></span>
                        </div>
                    </th>
                </tr>
                <tr class="biggerinput">
                    <th class="col-md-1" >
                        <div style="margin-top: -100px">
                            Study Description
                        </div>
                    </th>
                    <th>
                        <div class="form-group" >
                            <textarea asp-for="currentStudy.Description" class="form-control" style="height:100px"></textarea>
                            <span asp-validation-for="currentStudy.Description" class="text-danger"></span>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th class="col-md-2">
                        Pay
                    </th>
                    <th>
                        <div class="form-group">
                            <input asp-for="currentStudy.Pay" class="form-control" />
                            <span asp-validation-for="currentStudy.Pay" class="text-danger"></span>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th class="col-md-2">
                        Duration given in minutes
                    </th>
                    <th>
                        <div class="form-group">
                            <input asp-for="currentStudy.Duration" class="form-control" />
                            <span asp-validation-for="currentStudy.Duration" class="text-danger"></span>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th class="col-md-2">
                        Preparation
                    </th>
                    <th>
                        <div class="form-group">
                            <input asp-for="currentStudy.Preparation" class="form-control" />
                            <span asp-validation-for="currentStudy.Preparation" class="text-danger"></span>
                        </div>
                    </th>
                </tr>
                <tr class="biggerinput">
                    <th class="col-md-1">
                        <div style="margin-top: -100px">
                            Eligibility Requirements
                        </div>
                        
                    </th>
                    <th>
                        <div class="form-group">
                            <textarea asp-for="currentStudy.EligibilityRequirements" class="form-control" style="height:100px" ></textarea>
                            <span asp-validation-for="currentStudy.EligibilityRequirements" class="text-danger"></span>
                        </div>
                    </th>
                </tr>

                    <tr>
                        <th class="col-md-1">
                            Include Male
                        </th>
                        <th>
                            <div class="form-group">
                                <div class="checkbox">

                                    <label class="control-label">
                                        @Html.RadioButtonFor(model => model.inclusioncriteria.Male, true) Yes
                                        @Html.RadioButtonFor(model => model.inclusioncriteria.Male, true) No
                                    </label>
                                    <span asp-validation-for="inclusioncriteria.Male" class="text-danger"></span>
                                </div>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th class="col-md-1">
                            Include Female
                        </th>
                        <th>
                            <div class="form-group">
                                <div class="checkbox">

                                    <label class="control-label">
                                        @Html.RadioButtonFor(model => model.inclusioncriteria.Female, true) Yes
                                        @Html.RadioButtonFor(model => model.inclusioncriteria.Female, true) No
                                    </label>
                                    <span asp-validation-for="inclusioncriteria.Female" class="text-danger"></span>
                                </div>
                            </div>
                        </th>
                    </tr>
                <tr action="" class="form-horizontal">
                    <th class="col-md-1">
                        Participants age
                    </th>
                    <th>
                        <div class="form-group">
                            <div class="col-md-2">
                                <div style="color: lightblue;">
                                    MinimumAge
                                </div>
                                <input asp-for="inclusioncriteria.MinAge" class="form-control"/>
                                <span asp-validation-for="inclusioncriteria.MinAge" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <div style="color: lightblue;">
                                    MaximumAge
                                </div>
                                <input asp-for="inclusioncriteria.MinAge" class="form-control" />
                                <span asp-validation-for="inclusioncriteria.MinAge" class="text-danger"></span>
                            </div>

                        </div>

                    </th>
                </tr>
                <tr>
                    <th class="col-md-1">
                        Does the participant have to speak english?
                    </th>
                    <th>
                        <div class="form-group">
                            <div class="checkbox">

                                <label class="control-label">
                                    @Html.RadioButtonFor(model => model.inclusioncriteria.English, true) Yes
                                    @Html.RadioButtonFor(model => model.inclusioncriteria.English, true) No
                                </label>
                                <span asp-validation-for="inclusioncriteria.English" class="text-danger"></span>
                            </div>
                        </div>
                    </th>
                </tr>
                    <tr>
                        <th class="col-md-1">
                            Create as Draft
                        </th>
                        <th>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label class="control-label">
                                        @Html.RadioButtonFor(model => model.currentStudy.Isdraft, true) Yes
                                    </label>
                                </div>
                            </div>
                        </th>
                    </tr>

                </thead>
            </table>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" formaction="Create" />
           
                <input type="submit" value="Cancel" class="btn btn-default" formaction="ReturnToHomePage" />
            </div>
        </div>
      
    </div>
</div>






   

