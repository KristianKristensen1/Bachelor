@model FrontEndBA.Models.VerifyResearcherModel
@{
    ViewData["Title"] = "VerifyResearcher";
}

<body onload="UnverifiedResearchers()">

</body>
<h2>VerifyResearcher</h2>
<div class="container" style="height:600px">
    <div class="row">
        <div>
            <button class="btn-default" onclick="UnverifiedResearchers()">Unverified researchers</button>
            <button class="btn-default" onclick="AllResearchers()">All researchers</button>
        </div>
        <div class="col-md-5" id="UnverifiedResearchers" style="background-color:white; overflow-y:scroll; height: 500px; width:50%; margin-bottom:20px; border-radius:10px; border-style:solid; border-color:black">
            <h3 class="tableTitle">Researchers that is not yet verified</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-md-1">
                            ID
                        </th>
                        <th class="col-md-2">
                            <label>Name</label>
                        </th>
                        <th class="col-md-3">
                            <label>email</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var researcher in Model.UnverifiedResearchers)
                    {
                        <tr class="parantHover" title="@researcher.Name" onclick="ShowSelectedResearcher(@researcher.IdResearcher, '@researcher.Email')">
                            <td>
                                @Html.DisplayFor(modelItem => researcher.IdResearcher)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => researcher.Name)
                            </td>
                            <td>
                                <text>
                                    @Html.DisplayFor(modelItem => researcher.Email)
                                </text>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-5" id="AllResearchers" style="background-color:white; overflow-y:scroll; height: 500px; width:50%; margin-bottom:20px; border-radius:10px; border-style:solid; border-color:black" hidden>
            <h3 class="tableTitle">All researchers</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-md-1">
                            ID
                        </th>
                        <th class="col-md-2">
                            <label>Name</label>
                        </th>
                        <th class="col-md-3">
                            <label>email</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var researcher in Model.AllResearchers)
                    {
                        <tr class="parantHover" title="@researcher.Name" onclick="ShowSelectedResearcher(@researcher.IdResearcher, '@researcher.Email')">
                            <td>
                                @Html.DisplayFor(modelItem => researcher.IdResearcher)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => researcher.Name)
                            </td>
                            <td>
                                <text>
                                    @Html.DisplayFor(modelItem => researcher.Email)
                                </text>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-5" style="background-color:white; height: 350px; width:40%; margin-bottom:20px; border-radius:10px; border-style:solid; border-color:#002546;">
            <form asp-action="VerifyResearcher">
                <h3 class="tableTitle">Verify researcher</h3>
                <h5>Choose a participant enrolled in study to remove, or enter the ID of a participant you wish to enroll in study</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-md-1">
                                <label>ID</label>
                            </th>
                            <th class="col-md-4">
                                <div class="form-group">
                                    <label>Email</label>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <span asp-validation-for="researcherID" class="text-danger"></span>
                            <th class="col-md-1" title="Enter ID of participant to add or remove">
                                <input asp-for="researcherID" class="form-control" id="resID" readonly="@true" />
                            </th>
                            <th>
                                <div class="form-group">
                                    @if (Model.researcherEmail == null)
                                    {
                                        <input asp-for="researcherEmail" class="form-control" id="email" readonly="@true" value="No researcher selected" />
                                    }
                                    else
                                    {
                                        <input asp-for="researcherEmail" class="form-control" id="email" readonly="@true" value="@Model.researcherEmail" />
                                    }
                                </div>
                            </th>
                        </tr>
                    </tbody>
                </table>
                <div>
                    <button type="button" class="btn btn-default" id="verify" data-toggle="modal" data-target=".confirmVerify">Verify researcher</button>
                    <button type="button" class="btn btn-default" id="delete" data-toggle="modal" data-target=".confirmDelete">Unverify researcher</button>
                </div>
                <div class="modal fade confirmVerify">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button data-dismiss="modal" class="close"><span>&times;</span></button>
                                <div class="modal-title"><h2>Verify researcher?</h2></div>
                            </div>
                            <div class="modal-body">
                                <h4>Are you sure that you want to verify this researcher?</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default" formaction="VerifyReseracher">Verify</button>
                                <button data-dismiss="modal" class="btn btn-default">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade confirmDelete">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button data-dismiss="modal" class="close"><span>&times;</span></button>
                                <div class="modal-title"><h2>Unverify researcher?</h2></div>
                            </div>
                            <div class="modal-body">
                                <h4>Are you sure that you want to unverify the researcher?</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default" formaction="UnverifyResearcher">Unverify</button>
                                <button data-dismiss="modal" class="btn btn-default">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>

</div>


</div>

