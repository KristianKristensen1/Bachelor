@model FrontEndBA.Models.ParticipantModel.AccountViewModels.ParticipantRegisterViewModel
@using FrontEndBA.Models.ParticipantModel.AccountViewModels;

@{
    ViewData["Title"] = "RegisterPageParticipant";
}

<h2>Participant Register</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterPageParticipant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <label text="Pick a Gender" class="control-label">
                <label asp-for="GenderType" class="control-label"></label>
                <select asp-for="GenderType" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
            </label>
            
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <div class="checkbox">

                    <label class="control-label">
                        @Html.RadioButtonFor(model => model.Language, true) Yes
                        @Html.RadioButtonFor(model => model.Language, true) No
                    </label>
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="padding-bottom:10px">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Register" class="btn btn-default" formaction="CreateParticipant">Register</button>
                <button type="button" class="btn btn-default" onclick="location.href = '@(Url.Action("Participant", "Welcome"))'">Cancel</button>
            </div>
        </form>
    </div>
    <div style="text-align: right" class="col-md-4">
        <img src="~/images/PatientIcon.png" alt="Error Logo" style="width: 50%; height: 50%">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
